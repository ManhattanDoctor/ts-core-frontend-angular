{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "cli": {
        "cache": {
            "enabled": false
        }
    },
    "projects": {
        "@ts-core/angular": {
            "projectType": "library",
            "root": "./",
            "sourceRoot": "./",
            "prefix": "vi-lib",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:ng-packagr",
                    "options": {
                        "tsConfig": "tsconfig.json",
                        "project": "src/ng-package.json"
                    },
                    "configurations": {
                        "production": {
                            "tsConfig": "tsconfig.json"
                        }
                    }
                }
            }
        }
    }
}
